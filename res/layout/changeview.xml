<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
	<ScrollView android:id="@+id/aboutscrollview" 
		android:orientation="vertical"
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent">    
		<LinearLayout
		    android:orientation="vertical"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent">
			<TextView android:text="Thanks for installing Target for Android."
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:paddingLeft="15px"		
				android:layout_gravity="center_vertical"
				android:textColor="#ffffff" />	
			<TextView android:text="Changes: "
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"		
				android:paddingTop="15px"
				android:paddingLeft="15px"
				android:textStyle="bold"
				android:textColor="#ffffff" />
			<TextView android:text="v1.1.1: Fixed a crash in 1.1."
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:textColorLink="#ffffff"
				android:paddingLeft="15px"	
				android:paddingBottom="10px"		
				android:textColor="#ffffff" />
			<TextView android:text="v1.1: Realtime scoring, better appearance, improved word list."
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:textColorLink="#ffffff"
				android:paddingLeft="15px"			
				android:textColor="#ffffff" />
			<TextView android:text="Bugs/requests? "
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:paddingTop="15px"
				android:paddingLeft="15px"
				android:textStyle="bold"
				android:textColor="#ffffff" />	
			<TextView
				android:text="Please report any issues or requests to the project page:\n\nhttp://android-target.googlecode.com/"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:paddingLeft="15px"
				android:autoLink="web"
				android:textColorLink="#ffffe0"			
				android:textColor="#ffffff" />	
			</LinearLayout>
		</ScrollView>			
</LinearLayout>