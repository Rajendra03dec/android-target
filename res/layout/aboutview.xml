<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
	<ScrollView android:id="@+id/aboutscrollview" 
		android:orientation="vertical"
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent">    
		<LinearLayout
		    android:orientation="vertical"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent">
			<TextView android:text="Your goal: "
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:paddingTop="15px"
				android:paddingLeft="15px"
				android:textStyle="bold"
				android:textColor="#ffffff" />
			<TextView android:text="How many words of four letters or more can you make from the letters in the grid?\n\nEach letter can only be used once, and each word must contain the centre letter. There must be at least one nine letter word.\n\nNo plurals ending in 's',
no foreign words, no words with initial capital, no hyphenated words."
				android:id="@+id/goalText"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:paddingLeft="15px"		
				android:layout_gravity="center_vertical"
				android:textColor="#ffffff" />	
			<TextView android:text="How to play: "
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"		
				android:paddingTop="15px"
				android:paddingLeft="15px"
				android:textStyle="bold"
				android:textColor="#ffffff" />
			<TextView android:text="Touch the letters in the grid to make a word, then click 'Submit' to save that word.\n\nTap 'Clear' to delete letters from the current word, or long-click to clear the entire word.\n\nTo delete a word or see its definition, select the word in the list.\n\nWhen done, select 'Score' from the menu to see how you did, alternatively enable 'Realtime scoring' in options.\n\nAny current game will be saved whenever you leave the application."
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:textColorLink="#ffffff"
				android:paddingLeft="15px"			
				android:textColor="#ffffff" />
			<TextView android:text="Version: "
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:paddingTop="15px"
				android:paddingLeft="15px"
				android:textStyle="bold"
				android:textColor="#ffffff" />	
			<TextView android:id="@+id/aboutVersionCode"
				android:text="1.2"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:paddingLeft="15px"					
				android:textColor="#ffffff" />	
			<TextView android:text="License: "
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:paddingTop="15px"
				android:paddingLeft="15px"
				android:textStyle="bold"
				android:textColor="#ffffff" />	
			<TextView android:text="GNU General Public License v2"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:paddingLeft="15px"								
				android:textColor="#ffffff" />	
			<TextView android:text="http://www.gnu.org/licenses/gpl.html"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:autoLink="web"
				android:textColorLink="#ffffff"
				android:paddingLeft="15px"
				android:textSize="12sp"					
				android:textColor="#ffffff" />			
			<TextView android:text="Project Home:"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:paddingTop="15px"
				android:paddingLeft="15px"
				android:textStyle="bold"
				android:textColor="#ffffff" />
			<TextView android:text="http://android-target.googlecode.com/"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:autoLink="web"
				android:textColorLink="#ffffff"
				android:paddingLeft="15px"
				android:textSize="12sp"					
				android:textColor="#ffffff" />		
			<TextView android:text="Author: "
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"		
				android:paddingTop="15px"
				android:paddingLeft="15px"
				android:textStyle="bold"
				android:textColor="#ffffff" />	
			<TextView android:text="Ben Buxton"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:paddingLeft="15px"								
				android:textColor="#ffffff" />
												
			</LinearLayout>
		</ScrollView>			
</LinearLayout>