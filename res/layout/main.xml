<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    >
	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
	<net.cactii.target.TargetGridView 
		android:id="@+id/targetGrid"
	    android:layout_width="250dp"
	    android:layout_height="wrap_content" 
	    android:layout_alignParentRight="true"
	    android:layout_marginTop="10dp"
	    android:layout_marginRight="10dp"
	    android:gravity="center"
	    />
	 <TextView
	    android:id = "@+id/targetCounts"
	    android:layout_width="wrap_content" 
	    android:layout_height="130dp" 
	    android:layout_alignParentLeft="true"
	    android:layout_toLeftOf="@+id/targetGrid"
	    android:layout_marginTop="10dp"
	    android:textSize="16dp"
	    android:textColor="#FF000000"
	    android:text=""
	    />
	    <Button
		android:id="@+id/clearWord"
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content" 
	    android:layout_alignParentLeft="true"
	   	android:layout_below="@+id/targetCounts"
	   	android:layout_marginTop="10dp"
	    android:textSize="24dp"
	    android:text="Clear"
	    />


	</RelativeLayout>
	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:background="#10000000"
		android:layout_height="wrap_content">

		<TextView
			android:id="@+id/enteredWord"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content" 
		    android:textSize="28dp"
		    android:textStyle="bold"
		    android:background="#00DFDFC0"
		    android:textColor="#FF000000"
		    android:cursorVisible="true"
		    android:layout_weight="1"
		    android:text=""
		    />
	    <Button
		android:id="@+id/submitWord"
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content" 
	    android:layout_alignParentRight="true"
	    android:textSize="16dp"
	    android:paddingTop="1px"
	    android:paddingBottom="1px"
	    android:text="Submit"
	    />
	</LinearLayout>
	<ListView
		android:id="@+id/playerWordList"
		android:clickable="false"
		android:visibility="gone"
		android:cacheColorHint="#00000000"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"/>
	<TextView
		android:id="@+id/bottomText"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:text="Press Menu for instructions or to start."
		android:textColor="#FF000000"
		/>
</LinearLayout>
